{
   "background": {
      "scripts": [ "lib/BigInteger.min.js", "js/steam.js", "js/background.js" ]
   },
   "browser_action": {
      "default_icon": {
         "128": "images/icon-128.png",
         "16": "images/icon-16.png",
         "19": "images/icon-19.png",
         "24": "images/icon-24.png",
         "32": "images/icon-32.png",
         "38": "images/icon-38.png",
         "48": "images/icon-48.png",
         "64": "images/icon-64.png",
         "96": "images/icon-96.png"
      },
      "default_popup": "options/options.html",
      "default_title": "Configure SAMSA"
   },
   "content_scripts": [ {
      "css": [ "css/main.css" ],
       "js": [ "js/content-script-steam.js" ],
      "matches": [ "https://steamcommunity.com/id/*", "https://steamcommunity.com/profiles/*" ]
   } ],
   "description": "Sourceban Augmented Moderator Steam Addon",
   "icons": {
      "128": "images/icon-128.png",
      "16": "images/icon-16.png",
      "19": "images/icon-19.png",
      "24": "images/icon-24.png",
      "32": "images/icon-32.png",
      "38": "images/icon-38.png",
      "48": "images/icon-48.png",
      "64": "images/icon-64.png",
      "96": "images/icon-96.png"
   },
   "manifest_version": 2,
   "name": "SAMSA",
   "permissions": [ "https://api.steampowered.com/ISteamUser/*", "clipboardWrite", "contextMenus", "storage" ],
   "version": "0.1.0.0"
}
